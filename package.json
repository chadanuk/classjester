{
    "name": "classjester",
    "version": "0.0.1",
    "description": "Class based testing framework, wrapping Jest inspired by PHPUnit",
    "main": "lib/index.js",
    "scripts": {
        "build": "npx tsc",
        "watch": "npx tsc && npx tsc -w",
        "prepare": "npm run build",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "test": "IS_SELF=true node lib/index.js lib/Tests"
    },
    "author": "Dan Chadwick",
    "license": "MIT",
    "devDependencies": {
        "@types/filesystem": "^0.0.32",
        "@types/node": "^17.0.31",
        "@types/node-emoji": "^1.8.1",
        "fs": "^0.0.1-security",
        "node-emoji": "^1.11.0",
        "path": "^0.12.7",
        "prettier": "^2.6.2",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.6.4"
    }
}
