  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "Tests"],
